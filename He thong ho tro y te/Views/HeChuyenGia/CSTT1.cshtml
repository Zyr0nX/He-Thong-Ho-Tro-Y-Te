
@{
    ViewBag.Title = "CSTT1";
    Layout = "~/Views/Shared/HomeTemplate.cshtml";
}

<form action="CSTT1" method="post" role="form">
    
      
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 pa_right">
                    <div class="testomonial_img">
                        <figure><img src="~/Content/images/unnamed.jpg" alt="#" /></figure>
                        <i><img src="~/Content/images/test_con.png" alt="#" /></i>
                    </div>
                </div>

                <div class="col ">
                    <div class="cross_inner">
                        <h2>Hệ chuyên gia<br><strong class="ornage_color">Chẩn đoán</strong></h2>

                        <p>
                            Bệnh nhân có xuất hiện triệu chứng sau đây không?
                        </p>
