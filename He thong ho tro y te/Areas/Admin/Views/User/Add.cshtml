<form action="Add" method="post" role="form" enctype="multipart/form-data">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm mới </h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">

                    <!-- /.form-group -->
                    <div class="form-group">
                        <label for="name">Tên người dùng</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Nguyễn Văn A">
                    </div>
                    <div class="form-group">
                        <label for="">Tên đăng nhập</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="admin">
                    </div>
                    
                </div>
                <!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        <label>Loại người dùng</label>
                        <select class="form-control" name="groupid">
                            @foreach (var item in Model)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Mật khẩu</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="123456">
                    </div>
                    <!-- /.form-group -->

                </div>
                <!-- /.col -->


            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class="form-group">
                        <label for="exampleInputFile">Chọn ảnh</label>
                        <input type="file" id="image" name="image">
                        <p class="help-block">Chọn ảnh của sản phẩm</p>
                    </div>


                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea name="describe" id="description" class="form-control" rows="3" placeholder="Thêm mô tả ..."></textarea>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.box-body -->

    </div>
    <div class="box-footer">
        <input type="submit" class="btn btn-primary" value="Thêm" />
    </div>
    <script src="/CKFinderScripts/ckfinder.js"></script>

</form>



